      script(src='https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')
  body
    // Navigation
    nav.navbar.navbar-default.navbar-custom.navbar-fixed-top
      .container-fluid
        // Brand and toggle get grouped for better mobile display
        .navbar-header.page-scroll
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/index') Denuncias
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/denunciar') Denunciar
            li
              a(href='/index') Contacto
            li
              a(href='/contacto') Denuncias
        // /.navbar-collapse
      // /.container
    // Page Header
    // Set your background image for this header on the line below.
    header.intro-header(style="background-image: url('img/home-bg.jpg')")
      .container
        .row
          .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
            .site-heading
              h1 Denuncias
              hr.small
              span.subheading Veritas Liberabit Vos
    // Main Content
    .container
      .row
        .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
          .post-preview
            table
              tr
                a(href='/denuncom')
                  h2.post-title
                    | El profe me reprobo
                  h3.post-subtitle
                    | Bullying
                    // Aqui va el titulo de la Denuncia
              tr
                  h3.post-subtitle
                        | Pendiente
                    // Aqui va el tipo de denuncia
                td
                  p.post-meta
                    span
                      |  2015/09/10
              // AQUI VA LA FECHA
          hr
          // Pager
          ul.pager
            li.next
              a(href='#') Denuncias más antiguas →
    hr
    // Footer
    footer
      .container
        .row
          .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
            p.copyright.text-muted Copyright © Your Website 2014
